<section class="search">
{{!--     {{contadorPagina}} --}}
   <h2>Buscador de repuestos</h2>
   <div class="index-forms">
      <form action="/brands" method="POST" id ="formBrand" autocomplete="off">
         <input placeholder="Marca" list="brand" name="brand" id="inputBrand">
         <datalist id="brand">
         {{#each brandResults}}
         <option value="{{nombre}}" data-id ="{{{id}}}">{{{nombre}}}</option>
         {{/each}}
         </datalist>  
      </form>

      <form action="/models" method="POST" id ="formModels" autocomplete="off">
         <input placeholder="modelo" list="model" name="model" id="inputModel" disabled>
      </form>

      <form action="/submodels" method="POST" id ="formSubmodels" autocomplete="off">
         <input placeholder="submodelo"list="submodel" name="submodel" id="inputSubmodel" disabled>
      </form>

      <form action="/years" method="POST" id ="formYears" autocomplete="off">
         <input placeholder="aÃ±o"list="year" name="year" id="inputYear"disabled>
      </form>
   </div>
   </section>

    {{#if resultados}}
    <h4 class="subtitle-products">Productos encontrados</h4>
    <div class="products">
        {{#each resultados}}
        <div class="product">
            <img src="https://placeimg.com/640/480/tech" alt="">
            <h3 class="product-name">{{nombre}}</h3>
            <p class="product-sku">SKU: {{SKU}}</p>
            <p class="product-brand">{{marca}}</p>
            <div class="product-button">
                <p>${{precio}}</p>
                <a href="#">Comprar</a>
            </div>  

        {{!--     <p>descripcion: {{loud descripcion}}</p> --}}
        </div>
        {{/each}}
    {{else}}

    <div>NO HAY RESULTADOS</div>
    {{/if}}

   




    </div>

    <div class="pages">

    {{#if previousPage}}
         <a class="previous-page" href="/search?submodel={{$submodeloId}}&year={{$anyoId}}&page={{previousPage}}"`>{{previousPage}}</a>
    {{/if}}
    {{#if nextPage}}
        <a class="next-page" href="/search?submodel={{$submodeloId}}&year={{$anyoId}}&page={{nextPage}}"`>{{nextPage}}</a>
    {{/if}}
    </div>


</section>


<script src="/js/main.js" type="module"></script>